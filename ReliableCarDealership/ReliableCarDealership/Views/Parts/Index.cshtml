@model IEnumerable<ReliableCarDealership.Models.Part>

@{
    ViewData["Title"] = "Index";
}

<h1>Parts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartMakeModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartVehicleYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartMakeModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartVehicleYear)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.PartPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img class="card-img-top" src="~/img/@item.PartImage">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PartId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PartId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
